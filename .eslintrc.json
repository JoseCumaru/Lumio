{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-unused-vars": ["warn"],
    "no-console": ["warn"],
    "no-debugger": ["error"],
    "prefer-const": ["error"],
    "no-var": ["error"],
    "eqeqeq": ["error", "always"],
    "curly": ["error", "all"],
    "brace-style": ["error", "1tbs"],
    "comma-dangle": ["error", "never"],
    "no-trailing-spaces": ["error"],
    "eol-last": ["error", "always"]
  },
  "globals": {
    "lucide": "readonly",
    "MobileMenu": "writable",
    "CountdownTimer": "writable", 
    "ScrollAnimations": "writable",
    "LumioApp": "writable",
    "app": "writable"
  }
}